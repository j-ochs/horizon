.row
  - if @slides
    - @slides.each do |slide|
      .span3= link_to image_tag(slide.photo.url(:medium)), slide
.row
  .span9
    .navbar{style: "margin-top: 42px;"}  
      .navbar-inner  
        %ul.nav
          - Page.all.each do |page|
            %li{class: current_page?(page_id: page.id) && 'active'}= link_to page.name, articles_path(page_id: page.id)
            
          %li{class: current_page?(page_path('about')) && 'active'}= link_to 'About', page_path('about')

          - if user_signed_in?
            %li{class: current_page?(current_user) && 'active'}
              = link_to "#{ current_user.email }", current_user
              - if can? :create, Article
                %li{class: current_page?(users_path) && 'active'}= link_to "Manage", users_path
              %li= link_to "Log Out", destroy_user_session_path, method: :delete
          - else
            %li{class: current_page?(new_user_registration_path) && 'active'}= link_to "Sign Up", new_user_registration_path
            %li{class: current_page?(new_user_session_path) && 'active'}= link_to "Sign In", new_user_session_path
  